<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home | Vehicle Inventory</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('./partials/header.ejs') %>

    <main class="container">
        <section class="hero">
            <h1>Find Your Next Vehicle</h1>
            <p>Browse our wide selection of certified, pre-owned vehicles with transparent pricing.</p>
        </section>

        <section class="inventory">
            <h2>Available Vehicles</h2>
            <div class="vehicle-list">
                <% vehicles.forEach(vehicle => { %>
                    <div class="vehicle-card">
                        <a href="/inventory/<%= vehicle.id %>">
                            <img src="/images/vehicles/<%= vehicle.image %>" alt="<%= vehicle.make %> <%= vehicle.model %>">
                        </a>
                        <div class="vehicle-info">
                            <h3><%= vehicle.year %> <%= vehicle.make %> <%= vehicle.model %></h3>
                            <p class="price">$<%= vehicle.price.toLocaleString() %></p>
                            <p class="mileage"><%= vehicle.mileage.toLocaleString() %> miles</p>
                            <a class="details-btn" href="/inventory/<%= vehicle.id %>">View Details</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
    </main>

    <%- include('./partials/footer.ejs') %>
</body>
</html>
