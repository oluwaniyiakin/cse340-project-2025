 <!-- Heading-->
 <% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<form id="delete-form" action="/reviews/delete" method="post">
    <!--Message Block-->
    <%- messages() %>

    <!-- Error Block -->
    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error=>{ %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>

    <p>Are you sure you want to delete your review of this vehicle?</p>
    <label>
        Vehicle Make
        <input 
            type="text" 
            name="inv_make" 
            required 
            value="<%= locals.inv_make %>"
            readonly
        >
    </label>

    <label>
        Vehicle Model
        <input 
            type="text" 
            name="inv_model" 
            required 
            value="<%= locals.inv_model %>"
            readonly
        >
    </label>


    <input type="submit" value="Delete Review">

    <input type="hidden" name="account_id" value="<%= locals.account_id %>">
    <input type="hidden" name="inv_id" value="<%=locals.inv_id%>">

</form>