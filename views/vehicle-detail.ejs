<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= vehicle.name %> Details</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

    <!-- ✅ HEADER -->
    <header>
        <h1>Vehicle Details</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/inventory">Inventory</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <div class="vehicle-detail-container">
            <!-- ✅ Main Vehicle Image -->
            <div class="vehicle-detail">
                <img src="/images/vehicles/<%= vehicle.image %>" 
                     alt="<%= vehicle.name %>" 
                     onerror="this.onerror=null; this.src='/images/vehicles/no-image.JPG';">
                <h2><%= vehicle.name %></h2>
                <p><strong>Price:</strong> $<%= vehicle.price.toLocaleString() %></p>
                <p><strong>Mileage:</strong> <%= vehicle.mileage.toLocaleString() %> miles</p>
                <p><strong>Fuel Type:</strong> <%= vehicle.fuel_type %></p>
                <p><strong>Transmission:</strong> <%= vehicle.transmission %></p>
                <p><strong>Description:</strong> <%= vehicle.description %></p>
            </div>

            <!-- ✅ Image Gallery -->
            <% if (vehicle.gallery && vehicle.gallery.length > 0) { %>
                <div class="vehicle-gallery">
                    <h3>More Images</h3>
                    <div class="thumbnail-container">
                        <% vehicle.gallery.forEach(image => { %>
                            <img src="/images/vehicles/<%= image %>" 
                                 class="thumbnail" 
                                 alt="Gallery Image" 
                                 onclick="showImage('<%= image %>')">
                        <% }) %>
                    </div>
                </div>
            <% } %>
        </div>

        <a href="/inventory" class="btn">Back to Inventory</a>
    </main>

    <!-- ✅ FOOTER -->
    <footer>
        <p>&copy; <%= new Date().getFullYear() %> Vehicle Inventory. All rights reserved.</p>
    </footer>

    <script>
        function showImage(image) {
            document.querySelector('.vehicle-detail img').src = '/images/vehicles/' + image;
        }
    </script>

</body>
</html>
